<%- include('partials/header') %>
<h1><%= title %></h1>
<form method="POST" action="">
  <div class="form-group">
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      class="form-control"
      placeholder="Harry Potter"
      required="true"
    />
  </div>
  <div class="form-group">
    <label for="author">Author:</label>
    <select
      type="select"
      id="author"
      name="author"
      class="form-control"
      placeholder="select author"
    >
      <% authors.sort(function(a, b) {let textA = a.family_name.toUpperCase();
      let textB = b.family_name.toUpperCase(); return (textA < textB) ? -1 :
      (textA > textB) ? 1 : 0;}); authors.map(author => { %>
      <option value="" disabled selected hidden>Select Author</option>
      <option value="<%= author._id %>"><%= author.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="summary">Summary:</label>
    <textarea
      id="summary"
      name="summary"
      class="form-control"
      placeholder="summary"
      cols="2"
      required="true"
    >
    </textarea>
  </div>
  <div class="form-group">
    <label for="isbn">ISBN:</label>
    <input
      type="text"
      id="isbn"
      name="isbn"
      class="form-control"
      placeholder="ISBN13"
      required="true"
    />
  </div>
  <div class="form-group">
    <label>Genre:</label>
    <div>
      <% genres.map(genre =>{ %>
      <div style="display: inline; padding-right: 10px">
        <input
          type="checkbox"
          class="checkbox-input"
          name="genre"
          id="<%= genre._id %>"
          value="<%= genre._id %>"
        />
        <label for="<%= genre._id %>"><%= genre.name %></label>
      </div>
      <% }) %>
    </div>
  </div>
  <br />
  <input type="submit" value="Submit" class="btn btn-primary" />
</form>
<% if(errors){ %>
<ul>
  <% errors.map(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } - include('partials/footer') %>
